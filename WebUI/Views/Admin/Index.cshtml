@model IEnumerable<Domain.Entities.Sweet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        Список представлених товарів
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.SweetId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class ="text-center">
                    Дії
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @item.SweetId
                    </td>
                    <td>
                        @Html.ActionLink(item.Name, "Edit", new { item.SweetId})
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("SweetId", item.SweetId)
                            <input type="submit" class="btn btn-default btn-xs" value="Видалити" />
                        }
                    </td>
                </tr>
            }

        </table>
    </div>

    <div class="panel-footer">
        @Html.ActionLink("Додати", "Create", null, new { @class = "btn btn-default"}) 
    </div>
</div>